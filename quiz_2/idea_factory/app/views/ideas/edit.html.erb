<h1>Update your Idea</h1>

<% if @idea.errors.any? %>
    <ul>
        <% @idea.errors.full_messages.each do |error|%>
            <li><%= error%></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @idea, local: true do |form| %>
    <div>
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>
    <div>
        <%= form.label :description%>
        <%= form.text_area :description%>
    </div>
    <%= form.submit%>
<% end %>