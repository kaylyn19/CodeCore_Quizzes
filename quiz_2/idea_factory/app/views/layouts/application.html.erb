<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= flash[:notice] || flash[:alert]%>
    <%= link_to "View Ideas", ideas_path%> | 
    <%= link_to "New Idea", new_idea_path%> |

    <% if user_signed_in? %>
      <p>Hello, <%= current_user.full_name%></p>
      <%= link_to "Sign Out", session_path(current_user), method: :delete, data: {confirm: "Do you want to sign out?"}%> |
    <% else %>
      <%= link_to "Sign Up", new_user_path%> |
      <%= link_to "Sign In", new_session_path%> |
    <% end %>

    <%= yield %>
  </body>
</html>
